<?xml version="1.0" encoding="utf-8" ?>
<nlog
	xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	internalLogLevel="Info"
	internalLogFile=" C:\Users\Dell\Desktop\c#\FurnitureAPI\FurnitureAPI\logs\internal-nlog.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<!-- write logs to file -->
		<target xsi:type="File" name="allfile" fileName=" C:\Users\Dell\Desktop\c#\FurnitureAPI\FurnitureAPI\logs\nlog-all-${shortdate}.log"
				layout="${longdate}{$event-properties:item=EventId_Id}{$uppercase:${level}}${logger}${message}  ${exception:format=tostring}" />

		<target xsi:type="File" name="exceptions" fileName=" C:\Users\Dell\Desktop\c#\FurnitureAPI\FurnitureAPI\logs\nlog-all-${shortdate}.log"
				layout="${longdate}{$event-properties:item=EventId_Id}{$uppercase:${level}}${logger}${message}  ${exception:format=tostring}" />

		<target xsi:type="File" name="request-time" fileName=" C:\Users\Dell\Desktop\c#\FurnitureAPI\FurnitureAPI\logs\nlog-all-${shortdate}.log"
				layout="${longdate}{$event-properties:item=EventId_Id}{$uppercase:${level}}${logger}${message}  ${exception:format=tostring}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!-- All logs, including from Microsoft -->
		<logger name="*" minlevel="Trace" writeTo="allfile" />
		<logger name="FurnitureAPI" minlevel="Error" writeTo="exceptions" />
		<logger name="FurnitureAPI.Middlewares.RequestTimeMiddleware" minlevel="Trace" writeTo="request-time" />
	</rules>
</nlog>